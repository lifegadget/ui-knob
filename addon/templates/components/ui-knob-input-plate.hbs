<svg
  id={{elementId}}
  class="ui-input-plate{{classy class name}}"
  viewPort="0 0 {{dimensions}} {{dimensions}}"
  width={{dimensions}}
  height={{dimensions}}
  style="top:{{offset}}px; left: {{offset}}px;"
>
    <circle
      id="circle-{{elementId}}"
      cx={{radius}}
      cy={{radius}}
      r={{radius}}
      style="fill: {{color}};"
      {{action 'killClicks' on="click"}}
    ></circle>
</svg>

{{yield}}
