<svg
  id={{elementId}}
  class="ui-input-plate{{classy class name}}"
  viewPort="0 0 {{dimensions}} {{dimensions}}"
  width={{dimensions}}
  height={{dimensions}}
  style="top:{{offset}}px; left: {{offset}}px;"
>
    <circle
      id="circle-{{elementId}}"
      cx={{radius}}
      cy={{radius}}
      r={{radius}}
      style="fill: {{color}};"
      {{action 'killClicks' on="click"}}
    ></circle>
</svg>
{{#if upDown}}
  up down
{{/if}}

{{#if (gt leftRight 0)}}
  {{ui-knob-iterator class='left' min=min max=max amount=(inverse leftRight)}}
  {{ui-knob-iterator class='right' min=min max=max amount=leftRight}}
{{/if}}

{{#if (gt upDown 0)}}
  {{ui-knob-iterator class='up' min=min max=max amount=(inverse upDown)}}
  {{ui-knob-iterator class='down' min=min max=max amount=upDown}}
{{/if}}

{{yield}}
