<knob
  id="{{elementId}}"
  class='{{if class (concat class ' ')}}ui-knob{{if isFocused ' focused'}}{{if readOnly ' read-only'}}'
  style={{stylist}}
  tabindex={{tabindex}}
  onfocus={{action 'onFocus' true}}
  onblur={{action 'onFocus' false}}
>
  {{#if displayInput}}
    {{ui-knob-faceplate
      value=value
      blurValue=_blurValue
      readyOnly=readOnly
      upper=upper
      lower=lower
      pre=pre
      post=post
    }}
  {{/if}}

  {{#ui-knob-keyboard
    value=value
    isFocused=isFocused
    leftRight=_leftRight
    upDown=_upDown
    onChange=(action 'onChange')
    as |kb|
  }}
    {{ui-knob-arc
      width=width
      height=height
      value=value

      selectedPadding=selectedPadding
      thickness=thickness

      min=min
      max=max
      step=step
      angleArc=angleArc
      angleOffset=angleOffset

      isFocused=isFocused
      selectedColor=selectedColor
      unselectedColor=unselectedColor
      onError=(action 'onError')
    }}

  {{/ui-knob-keyboard}}
</knob>
