<knob
  id="{{elementId}}"
  class='{{if class (concat class ' ')}}ui-knob{{if isFocused ' focused'}}'
  style={{stylist}}
  tabindex=0
  onfocus={{action 'onFocus' true}}
  onblur={{action 'onFocus' false}}
>
  {{yield}}
  {{#if displayInput}}
    {{ui-knob-input
      value=value
      blurValue=_blurValue
      step=step
      width=width
      height=height
      thickness=thickness
      readyOnly=readOnly
      upper=upper
      lower=lower
      pre=pre
      post=post
    }}
  {{/if}}
  {{#ui-knob-keyboard
    value=value
    isFocused=isFocused
    upDown=upDown
    leftRight=leftRight
    onChange=(action 'onChange')
    as |kb|
  }}
      {{ui-knob-arc
        width=width
        height=height
        value=value

        selectedPadding=selectedPadding
        thickness=thickness

        min=min
        max=max
        angleArc=angleArc
        angleOffset=angleOffset

        isFocused=isFocused
        selectedColor=selectedColor
        unselectedColor=unselectedColor
      }}

  {{/ui-knob-keyboard}}
</knob>
