<knob
  id="{{elementId}}"
  class='{{if class (concat class ' ')}}ui-knob{{if isFocused ' focused'}}'
  style={{stylist}}
  tabindex=0
  onfocus={{action 'onFocus' true}}
  onblur={{action 'onFocus' false}}
>
  {{yield}}
  {{#ui-knob-keyboard
    value=value
    upDown=upDown
    leftRight=leftRight
    onChange=(action 'onChange')
    as |kb|
  }}
      {{ui-knob-arc
        width=width
        height=height
        value=value
        cursor=cursor
        min=min
        max=max
        angleArc=angleArc
        angleOffset=angleOffset

        isFocused=isFocused
        selectedColor=selectedColor
        unselectedColor=unselectedColor
      }}

  {{/ui-knob-keyboard}}
</knob>
