<knob id="{{elementId}}" class='ui-knob{{if class (concat ' ' class)}}' style={{stylist}}>

  {{ui-knob-background color=backColor width=width height=height}}
  {{yield}}

  <input
    id="input-{{elementId}}"
    type=type
  />

  {{ui-knob-input-plate
    color=plateColor
    width=width
    height=height
    thickness=thickness
  }}

  {{ui-knob-numeric-input
    value=value
    width=width
    height=height
    thickness=thickness
    readyOnly=readOnly
    upper=upper
    lower=lower
    pre=pre
    post=post
  }}
</knob>
