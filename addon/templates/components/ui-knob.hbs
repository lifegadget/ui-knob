<knob id="{{elementId}}" class='ui-knob{{if class (concat ' ' class)}}' style={{stylist}}>

  {{ui-knob-background  width=width height=height}}
  {{yield}}

  <input
    id="input-{{elementId}}"
    type=type
  />

  {{ui-knob-input-plate color='red' width=width height=height thickness=thickness }}
  {{ui-knob-numeric-input value=value readyOnly=readOnly}}
</knob>
