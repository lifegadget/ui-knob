<svg
  id={{elementId}}
  class="ui-knob-arc"
  width={{width}}
  height={{height}}
>
  <g
    class='arcs'
    transform="translate({{transformSize}},{{transformSize}})"
  >
    <path
      d={{backgroundArc}}
      class='background-arc'
      style={{_knobBackgroundStyle}}
    ></path>

    <path
      d={{inputHitZone}}
      transform="translate(0,{{_hitZoneTransform}})"
      class='input-hit-zone'
    ></path>

    <path
      d={{arc}}
      class='unselected'
      style={{_knobUnselectedStyle}}
    ></path>

    {{#if selectedPadding}}
      <path
        d={{selectedPaddingArc}}
        class='selected-padding'
        style={{_knobSelectedStyle}}
      ></path>
    {{/if}}
    <path
      class='selected{{if panning ' is-panning'}}'
      d={{selectedArc}}
      style={{_knobSelectedStyle}}
    ></path>
  </g>

</svg>
